<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_container_buttons"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/diceTop"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="77dp"
        android:layout_marginTop="49dp"
        app:srcCompat="@drawable/dice6" />

    <ImageView
        android:id="@+id/diceBottom"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@id/diceTop"
        android:layout_alignLeft="@id/diceTop"
        android:layout_marginTop="150dp"
        app:srcCompat="@drawable/dice6" />

    <Button
        android:id="@+id/button1"
        android:layout_width="78dp"
        android:layout_height="88dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="323dp"
        android:alpha="0"
        android:onClick="toggleCheatMode"
        android:text="1" />

    <Button
        android:id="@+id/button2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@id/button1"
        android:layout_alignTop="@id/diceTop"
        android:layout_alignLeft="@id/diceTop"
        android:alpha="0"
        android:onClick="beginRow"
        android:text="2" />

    <Button
        android:id="@+id/button3"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@id/button1"
        android:layout_alignTop="@id/diceTop"
        android:layout_alignRight="@id/diceTop"
        android:alpha="0"
        android:onClick="beginRow"
        android:text="3" />

    <Button
        android:id="@+id/button4"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@id/diceTop"
        android:layout_alignLeft="@id/diceTop"
        android:alpha="0"
        android:onClick="beginRow"
        android:text="4" />

    <Button
        android:id="@+id/button5"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@id/diceTop"
        android:layout_alignRight="@id/diceTop"
        android:alpha="0"
        android:onClick="beginRow"
        android:text="5" />

    <Button
        android:id="@+id/button6"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignTop="@id/diceBottom"
        android:layout_alignLeft="@id/diceBottom"
        android:alpha="0"
        android:onClick="beginRow"
        android:text="6" />

    <Button
        android:id="@+id/button7"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignTop="@id/diceBottom"
        android:layout_alignRight="@id/diceBottom"
        android:alpha="0"
        android:onClick="beginRow"
        android:text="7" />

    <Button
        android:id="@+id/button8"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@id/diceBottom"
        android:layout_alignLeft="@id/diceBottom"
        android:alpha="0"
        android:onClick="beginRow"
        android:text="8" />

    <Button
        android:id="@+id/button9"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@id/diceBottom"
        android:layout_alignRight="@id/diceBottom"
        android:alpha="0"
        android:onClick="beginRow"
        android:text="9" />

    <Button
        android:id="@+id/button10"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:alpha="0"
        android:onClick="beginRow"
        android:text="10" />

    <Button
        android:id="@+id/button11"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:alpha="0"
        android:onClick="beginRow"
        android:text="11" />

    <Button
        android:id="@+id/button12"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:alpha="0"
        android:onClick="beginRow"
        android:text="12" />

    <TextView
        android:id="@+id/insText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/diceTop"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="60dp"
        android:text="@string/ins_cheat_off"
        android:textSize="20sp" />

</RelativeLayout>